<div class="form-button-fixed">
    <button class="btn btn-primary" type="submit">
        <span class="glyphicon glyphicon-save"></span>
        Save
    </button>
</div>

<fieldset>
    <legend>Author(s)</legend>
    <div class="author-forms"></div>
    <div class="btn-row">
        <button class="btn btn-success btn-sm add-primary-author" type="button">
            <span class="glyphicon glyphicon-plus"></span>
            Add Author
        </button>
    </div>
</fieldset>

<fieldset>
    <legend>Title(s)</legend>
    <div class="title-forms"></div>
    <div class="btn-row">
        <button class="btn btn-success btn-sm add-title" type="button">
            <span class="glyphicon glyphicon-plus"></span>
            Add Title
        </button>
    </div>
</fieldset>

<fieldset>
    <legend>Other Author(s)</legend>
    <div class="other-author-forms"></div>
    <div class="btn-row">
        <button class="btn btn-success btn-sm add-other-author" type="button">
            <span class="glyphicon glyphicon-plus"></span>
            Add Author
        </button>
    </div>
</fieldset>

<fieldset>
    <legend>Publication Information</legend>
    <div class="pub-info-form"></div>
</fieldset>

<div class="form-group">
    <label class="control-label">Series</label>
    <input type="text" name="series" class="form-control series">
</div>

<div class="form-group">
    <label class="control-label">Summary</label>
    <textarea name="summary" rows="10" class="form-control summary noresize"></textarea>
</div>
