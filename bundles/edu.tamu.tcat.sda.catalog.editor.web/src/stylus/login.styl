@import '_vars'

body#login
    background light-bg
    color light-fg

    header
        background transparent !important
        text-align center

        padding 1em
        margin-bottom 1em

        @media screen and (min-width: screen-xs-min)
            padding 2em
            margin-bottom 2em

    hr.thick
        border 20px solid transparent
        width 75%
        margin 30px auto

        &.top
            border-top-width 0
            border-bottom-color light-bg-accent2
            margin-top 0

        &.bottom
            border-bottom-width 0
            border-top-color light-bg-accent2
            margin-bottom 0

    #login-container
        background dark-bg
        color dark-fg
        box-shadow inset 0 0 8px #000

        a
            color #2aa198

    #login-form
        max-width 330px
        margin 0 auto
        padding 2em

        h1
            margin-top 0

        .form-group.form-group-username
             margin-bottom 0

        #username
            border-bottom-left-radius 0
            border-bottom-right-radius 0

        #password
            border-top-left-radius 0
            border-top-right-radius 0

        #username, #password
            padding 0.5em 0.75em
            background dark-bg-accent1
            color dark-fg-emph
            border-color dark-bg

            &:focus
                border-color dark-bg-accent2

        ::-webkit-input-placeholder, :-moz-placeholder, ::-moz-placeholder, :-ms-input-placeholder
           color dark-fg-muted

        .btn-row
            margin 1em 0 0

        .btn-row-sm
            margin 0.5em 0 0

    footer
        text-align center
        padding 3em 0
        color light-fg-muted
